            <a href="contact.html" class="btn">Contact</a>
        </div>

        <div class="education-section">
            <!-- Large background text -->
            <div class="education-background">EDUCATION</div>

            <!-- Foreground content -->
            <div class="education-content">
                <h2 style="text-align:center;">Education</h2>

                <div class="education-card">
                    <h3>Amrita Vishwa Vidyapeetham</h3>
                    <p>B.Tech Electronics and Communication</p>
                    <p>7.15 CGPA</p>
                    <p>Oct 2022 – Apr 2026</p>
                </div>

                <div class="education-card">
                    <h3>Alphonsa Residential School</h3>
                    <p>Higher Secondary - ISC</p>
                    <p>XI & XII – Science</p>
                    <p>Jun 2020 – Apr 2022</p>
                </div>

                <div class="education-card">
                    <h3>Alphonsa Residential School</h3>
                    <p>High School – ICSE</p>
                    <p>IX & X</p>
                    <p>Jun 2018 – Mar 2020</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
