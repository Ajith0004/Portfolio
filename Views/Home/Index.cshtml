        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #cfacac;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0;
        }

        /* Intro Section */
        .intro {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin: 0;
            padding: 0;
            background-color: #121212;
            height: auto;
        }

        .intro .text {
            flex-grow: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            margin-left: -150px;
        }

        .intro img {
            width: 500px;
            height: auto;
            margin-left: 300px;
            object-fit: contain;
            filter: grayscale(100%);
            background: transparent;
        }

        h1 {
            font-size: 3em;
            color: #e4f16e;
            margin: 0;
            line-height: 1.2;
        }

        .name-highlight {
            color: #7cf16e;
            font-size: 1.25em;
        }

        p {
            font-size: 1.2em;
            color: #cec4c4;
            margin: 10px 0 20px 0;
            max-width: 600px;
        }

        .btn {
            display: inline-block;
            padding: 10px 30px;
            margin: 10px 5px 0 0;
            border: none;
            background-color: #333;
            color: white;
            cursor: pointer;
            border-radius: 10px;
            text-decoration: none;
            font-size: 1em;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn:hover {
            background-color: #555;
            transform: translateY(-3px);
        }

        /* Section styles for Education and Experience */
        .section {
            position: relative;
            padding: 80px 0;
            text-align: center;
            overflow: hidden;
        }

        /* Large background text */
        .background-text {
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 8em;
            color: rgba(255, 255, 255, 0.05);
            z-index: 1;
            pointer-events: none;
            white-space: nowrap;
        }

        /* Foreground content */
        .section-content {
            position: relative;
            z-index: 2;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin-top: 50px;
        }

        .card {
            background-color: #333;
            padding: 20px;
            margin: 20px;
            border-radius: 10px;
            text-align: center;
            width: 300px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }

        .card h3 {
            color: #b0f2b4;
            margin-bottom: 10px;
            font-size: 1.5em;
            font-weight: bold;
        }

        .card p {
            margin: 5px 0;
            color: #ccc;
            font-size: 1.2em;
        }

        .card img {
            width: 100%;
            height: auto;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 10px;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .section-education {
            background-color: #121212;
        }

        /* Hidden content for the project */
        #project-details, #embedded-details {
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s, opacity 0.5s ease-in-out;
            background-color: #333;
            color: #ccc;
            padding: 20px;
            border-radius: 10px;
            margin: 20px;
            height: auto;
        }

        #project-details.active, #embedded-details.active {
            visibility: visible;
            opacity: 1;
        }
    </style>
</head>
